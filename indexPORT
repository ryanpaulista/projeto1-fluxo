    <script>
        const secaoCards = document.getElementById('secao-cards-jogadores');
        var mode = "home"
        
        let isDown = false;
        let startX;
        let scrollLeft;
    
        function startDrag(e) {
            isDown = true;
            secaoCards.classList.add('active');
    
            if (e.type === 'touchstart') {
                startX = e.touches[0].pageX - secaoCards.offsetLeft;
            } else {
                startX = e.pageX - secaoCards.offsetLeft;
            }
            scrollLeft = secaoCards.scrollLeft;
            e.preventDefault();
        }
    
        function drag(e) {
            if (!isDown) return;
            e.preventDefault();
    
            let x;
            if (e.type === 'touchmove') {
                x = e.touches[0].pageX - secaoCards.offsetLeft;
            } else {
                x = e.pageX - secaoCards.offsetLeft;
            }
            
            const walk = (x - startX) * 1.5;
            secaoCards.scrollLeft = scrollLeft - walk;
        }
    
        function endDrag() {
            isDown = false;
            secaoCards.classList.remove('active');
        }

        secaoCards.addEventListener('mousedown', startDrag);
        secaoCards.addEventListener('mousemove', drag);
        secaoCards.addEventListener('mouseup', endDrag);
        secaoCards.addEventListener('mouseleave', endDrag);
    
        secaoCards.addEventListener('touchstart', startDrag);
        secaoCards.addEventListener('touchmove', drag);
        secaoCards.addEventListener('touchend', endDrag);


        const buttonFF = document.getElementById('FFButton');
        const buttonCS = document.getElementById('CSButton');
        const buttonLOL = document.getElementById('LOLButton');
        const buttonR6 = document.getElementById('R6Button');

        buttonFF.addEventListener('click', FFfunction);
        buttonCS.addEventListener('click', CSfunction);
        buttonLOL.addEventListener('click', LOLfunction);
        buttonR6.addEventListener('click', R6function);



        function FFfunction(){
            if (mode=="home"){
                mode="ffmode"
                console.log(mode)
                document.getElementById('nobruCard').style.display="none";
                document.getElementById('cerolCard').style.display="none";
                document.getElementById('CSCard1').style.display="none";
                document.getElementById('CSCard2').style.display="none";    
                document.getElementById('CSCard3').style.display="none";    
                document.getElementById('CSCard4').style.display="none";    
                document.getElementById('CSCard5').style.display="none";        
                document.getElementById('LOLCard1').style.display="none";
                document.getElementById('R6Card').style.display="none";
            }   
            else if (mode=="ffmode"){
                mode="home"
                console.log(mode)
                document.getElementById('nobruCard').style.display="flex";
                document.getElementById('cerolCard').style.display="flex";
                document.getElementById('CSCard1').style.display="flex";
                document.getElementById('CSCard2').style.display="flex";   
                document.getElementById('CSCard3').style.display="flex";    
                document.getElementById('CSCard4').style.display="flex";    
                document.getElementById('CSCard5').style.display="flex";      
                document.getElementById('LOLCard1').style.display="flex";
                document.getElementById('R6Card').style.display="flex";

            }
            else if(mode=="r6mode" || mode=="csmode" || mode=="lolmode"){
                mode="ffmode"
                console.log(mode)
                document.getElementById('LOLCard1').style.display="none";
                document.getElementById('R6Card').style.display="none"; 
                document.getElementById('FFCard1').style.display="flex";
                document.getElementById('FFCard2').style.display="flex";
                document.getElementById('FFCard3').style.display="flex";
                document.getElementById('FFCard4').style.display="flex";
                document.getElementById('CSCard1').style.display="none";
                document.getElementById('CSCard2').style.display="none";   
                document.getElementById('CSCard3').style.display="none";    
                document.getElementById('CSCard4').style.display="none";    
                document.getElementById('CSCard5').style.display="none";
            }

        }

